@model OB.Models.ViewModel.CreateCandidate
@{
    ViewBag.Title = "新建Candidate";
}

<hgroup class="title">
    <h2>@ViewBag.Title</h2>
</hgroup>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>新建Candidate</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
            </li>
            <li>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
            </li>
            <li>
                @Html.LabelFor(m => m.Mail)
                @Html.TextBoxFor(m => m.Mail)
            </li>
            <li>
                @Html.LabelFor(m => m.ChineseName)
                @Html.TextBoxFor(m => m.ChineseName)
            </li>
            <li>
                @Html.LabelFor(m => m.ClientId)
                @Html.DropDownListFor(m => m.ClientId, new SelectList(ViewBag.ClientList, "Id", "Name"), String.Empty)
            </li>
            <li>
                @Html.LabelFor(m => m.PensionCityId)
                @Html.DropDownListFor(m => m.PensionCityId, new SelectList(ViewBag.CityList, "Id", "Name"), String.Empty)
            </li>
        </ol>
        <input type="submit" value="新建" />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
