@model OB.Models.Client

@{
    ViewBag.Name = "客户";
    ViewBag.Title = "新建";
}

<h1>@ViewBag.Name</h1>
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("CreateSave", "Client"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>@ViewBag.Name</legend>
        @Html.Hidden("returnUrl", (string)ViewBag.ReturnUrl)
        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.HRAdminId, "HRAdmin")
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.HRAdminId, new SelectList(Common.GetUserList("HRAdmin"), "Id", "Name"), String.Empty)
            @Html.ValidationMessageFor(model => model.HRAdminId)
        </div>

        <p>
            <input type="submit" value="保存" />
        </p>
    </fieldset>
}

<div>
    <a href="@Url.Content((string)ViewBag.ReturnUrl)">取消</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
