@model OB.Models.Client

@{
    ViewBag.Name = "客户";
    ViewBag.Title = "删除";
}

<h1>@ViewBag.Name</h1>
<h2>@ViewBag.Title</h2>

<h3>您确定要删除此条记录么?</h3>

@Html.Action("AbstractAll", "Client", new { id = Model.Id })

<div>
    @using (Html.BeginForm("DeleteSave", "Client"))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("id", Model.Id)
        @Html.Hidden("returnUrl", @Url.Content((string)ViewBag.ReturnUrl))

        <input type="submit" value="确认删除" />
    }
    <a href="@Url.Content((string)ViewBag.ReturnUrl)">取消</a>
</div>
