@model OB.Models.Weight

@{
    ViewBag.Name = "客户权重";
    ViewBag.Title = "详情";
}

<h1>@ViewBag.Name</h1>
<h2>@ViewBag.Title</h2>

@Html.Action("Abstract", "Weight", new { id = Model.Id })
<p>
    @using (Html.BeginForm("Edit", "Weight"))
    {    
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)
        @Html.Hidden("returnUrl", @Url.Content((string)ViewBag.ReturnUrl))
        <input type="submit" value="编辑" />
    }
    <a href="@Url.Content((string)ViewBag.ReturnUrl)">返回</a>
</p>
